{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@google-generative-ai": ["./node_modules/@google/generative-ai"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}